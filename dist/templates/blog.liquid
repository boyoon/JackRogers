<!-- /templates/{{ template }}.liquid -->

{% assign column_width = 'column l12' %}

{% paginate blog.articles by 6 %}

  <section class="container l">
    <div class="row">

      <div class="column l8 m12 s12">
        {% if current_tags %}
          <h1>{{ blog.title | link_to: blog.url }} &mdash; {{ current_tags.first }}</h1>
        {% else %}
          <h1>{{ blog.title }}</h1>
        {% endif %}

        <div class="row">
          {% for article in blog.articles %}
            {% include 'blog-article' %}
          {% endfor %}
        </div>

        {% include 'theme-pagination' with 'hr' %}
      </div>

      <div class="column l4 m-hide s-hide">
        {% include 'blog-sidebar' %}
      </div>

    </div>
  </section>

{% endpaginate %}
