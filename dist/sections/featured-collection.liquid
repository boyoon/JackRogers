<hr class="FeaturedCollection__border">
<div class="container">
  <div class="row">
    <div class="column l12">
      <h2 class="FeaturedCollection__title">{{section.settings.main_title}}</h2>
    </div>
  </div>
  <div class="row">
  {% for block in section.blocks %}
    <div class="column l3 m6 s6">
      <a class="FeaturedCollection__url" href="{{block.settings.url}}">
        <div class="FeaturedCollection__image">
          <picture>
            <source media="(min-width:650px)" srcset="{{block.settings.image | img_url:'master'}}">
            <source media="(max-width:650px)" srcset="{{block.settings.mobile_image | img_url:'master'}}">
            <img src="{{block.settings.image | img_url:'master'}}">
          </picture>
        </div>
        <div class="FeaturedCollection__text">
          <h2>{{block.settings.title}}</h2>
          <h2>{{block.settings.title_2}}</h2>
          <p>{{block.settings.description}}</p>
        </div>
      </a>
    </div>
  {% endfor %}
  </div>
</div>




{% schema %}
{
  "name": "Featured Collection",
  "class":"FeaturedCollection",
  "settings":[
    {
      "type":"text",
      "id":"main_title",
      "label":"Title"
    }
  ],
  "blocks":[{
    "type":"Collection",
    "name":"Collection",
    "limit": 4,
    "settings": [
      {
        "type":"header",
        "content":"Collection Block"
      },
      {
        "id":"new",
        "type":"checkbox",
        "label":"Is it New?"
      },
      {
        "id":"image",
        "type":"image_picker",
        "label":"Collection Image"
      },
      {
        "id":"mobile_image",
        "type":"image_picker",
        "label":"Collection Image Mobile"
      },
      {
        "id": "title",
        "type": "text",
        "label": "First Title Line"
      },
      {
        "id": "title_2",
        "type": "text",
        "label": "Second Title Line"
      },
      {
        "id": "description",
        "type": "text",
        "label": "Description"
      },
      {
        "id":"url",
        "type":"url",
        "label":"Links to"
      }
    ]
  }],
  "presets":[{
      "name": "Featured Collection",
      "category": "Homepage"
    }
  ]
}
{% endschema %}