{% for block in section.blocks %}
{% if forloop.index == 2 %}
  <div class="Monogram__image l-hide m-hide">
    <picture>
      <img src="{{block.settings.image | img_url:'master'}}">
    </picture>
  </div>
{% endif %}
{% endfor %}
<div class="container">
  <div class="row">
    <div class="column l12">
      <h2 class="Monogram__title">{{section.settings.main_title}}</h2>
      <p class="Monogram__sub">{{section.settings.main_sub}}</p>
    </div>
  </div>
  <div class="row">
    {% for block in section.blocks %}
    <div class="column l4 m4 s12">
      <a class="Monogram__url {% if forloop.index == 2%} s-hide {% endif %}" href="{{block.settings.url}}">
        <div class="Monogram__image">
          <picture>
            <img src="{{block.settings.image | img_url:'master'}}">
          </picture>
        </div>
        <div class="Monogram__text">
          <h2>{{block.settings.title}}</h2>
          <h2>{{block.settings.title_2}}</h2>
        </div>
      </a>
    </div>
    {% endfor %}
  </div>
</div>






{% schema %}
{
  "name": "Monogram Collection",
  "class":"Monogram",
  "settings":[
    {
      "type":"text",
      "id":"main_title",
      "label":"Title"
    },
    {
      "type":"text",
      "id":"main_sub",
      "label":"Title"
    }
  ],
  "blocks":[{
    "type":"Collection",
    "name":"Collection",
    "limit": 4,
    "settings": [
      {
        "type":"header",
        "content":"Collection Block"
      },
      {
        "id":"new",
        "type":"checkbox",
        "label":"Is it New?"
      },
      {
        "id":"image",
        "type":"image_picker",
        "label":"Collection Image"
      },
      {
        "id":"mobile_image",
        "type":"image_picker",
        "label":"Collection Image Mobile"
      },
      {
        "id": "title",
        "type": "text",
        "label": "First Title Line"
      },
      {
        "id": "title_2",
        "type": "text",
        "label": "Second Title Line"
      },
      {
        "id":"url",
        "type":"url",
        "label":"Links to"
      }
    ]
  }],
  "presets":[{
      "name": "Monogram Collection",
      "category": "Homepage"
    }
  ]
}
{% endschema %}