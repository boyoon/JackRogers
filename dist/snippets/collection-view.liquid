<!-- /snippets/collection-view.liquid -->

{% assign collection_views = '12,24,48' | split: ',' %}

<label>{{ 'collection.view.title' | t }}</label>
<p>
  {% for collection_view in collection_views %}
    <a href="collections/{{ collection.handle }}?view={{ collection_view }}" title="{{ 'collection.view.label' | t: view: collection_view }}"{% if view == collection_view %} class="active"{% endif %} data-view="{{ collection_view }}">{{ collection_view }}</a>
  {% endfor %}
</p>
