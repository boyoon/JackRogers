<!-- snippets/social-links.liquid -->

{% assign icons = true %}
{% assign social_icons_available = 'twitter,facebook,instagram,pinterest,fancy,google_plus,youtube,vimeo,medium' | split: ',' %}

<ul class="inline" itemscope itemtype="http://schema.org/Organization">
  <link itemprop="url" href="{{ shop.url }}">
  
      <li>
        <a href="{{ settings[link] }}" title="{{ shop.name }} on {{ title | t }}" target="_blank" itemprop="sameAs">
          {% if icons %}
            {% include 'icon' with 'twitter' %}
          {% else %}
            {{ title | t }}
          {% endif %}
        </a>
      </li>
       <li>
        <a href="{{ settings[link] }}" title="{{ shop.name }} on {{ title | t }}" target="_blank" itemprop="sameAs">
          {% if icons %}

            {% include 'icon' with 'facebook' %}
          {% else %}
            {{ title | t }}
          {% endif %}
        </a>
      </li>
       <li>
        <a href="{{ settings[link] }}" title="{{ shop.name }} on {{ title | t }}" target="_blank" itemprop="sameAs">
          {% if icons %}
            {% include 'icon' with 'instagram' %}
          {% else %}
            {{ title | t }}
          {% endif %}
        </a>
      </li>
       <li>
        <a href="{{ settings[link] }}" title="{{ shop.name }} on {{ title | t }}" target="_blank" itemprop="sameAs">
          {% if icons %}
            {% include 'icon' with 'pinterest' %}
          {% else %}
            {{ title | t }}
          {% endif %}
        </a>
      </li>
</ul>

